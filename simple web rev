// CSS 
body, html {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.animated-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, #1c5ce7 0%, #8feb3a 100%);
    animation: gradient 5s ease infinite;
}
.para{
    position:absolute;
    color:black;
}

@keyframes gradient {
    0% { transform: translate(0, 0); }
    50% { transform: translate(-50%, -50%); }
    100% { transform: translate(0, 0); }
}

.content {
    position: relative;
    z-index: 1;
    color: white;
    text-align: center;
    margin-top: 50vh;
    transform: translateY(-50%);
}

